<% if user_signed_in? %>
    <% if current_user.email== "kpahawa@gmail.com" %>
        <h1>Listing contacts</h1>

        <table>
          <thead>
            <tr>
              <th>First</th>
              <th>Last</th>
              <th>Email</th>
              <th>Subscribed</th>
              <th>Message</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @contacts.each do |contact| %>
              <tr>
                <td><%= contact.first %></td>
                <td><%= contact.last %></td>
                <td><%= contact.email %></td>
                <td><%= contact.subscribed %></td>
                <td><%= contact.message %></td>
                <td><%= link_to 'Show', contact %></td>
                <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
                <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Contact', new_contact_path %>
    <% else %>
        <div class="container">
          <h1 style="text-align: center;"> You're not supposed to see this page! </h1>
        </div>
    <%end%>
<% else %>
    <div class="container">
      <h1> You're not supposed to see this page! </h1>
    </div>
<%end%>

