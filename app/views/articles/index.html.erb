          <!--<li><a href="#" class="icon fa-facebook">128</a></li>-->
        <!--</ul>-->
      </div>
      <p>
        <% if article.text.length > 1000 %>
            <% truncated = article.text[0..1000] + '...' %>
        <% else %>
            <% truncated = article.text %>
        <% end %>
        <%= simple_format(truncated, :sanitize => false) %>
      </p>
      <hr>
    </article>

    <% end %>

